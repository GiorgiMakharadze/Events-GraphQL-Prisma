{
  "compilerOptions": {
    "module": "CommonJS",
    "lib": ["esnext"],
    "sourceMap": true,
    "outDir": "./build",
    "baseUrl": ".",
    "paths": {
      "_app/*": ["./src/*"],
      "_rest/*": ["./src/rest/*"]
    },
    "esModuleInterop": true,
    "alwaysStrict": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strict": false
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "build"]
}
